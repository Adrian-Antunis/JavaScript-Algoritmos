<body>
    
    <script>
        var lado;
        lado = prompt("Informe o lado do quadrado.");
        lado = parseFloat(lado); // converte o valor para real (float)
        // var lado = parseFloat(prompt("Informe o lado do quadrado."));

        var area;
        area = lado * lado; // cálculo da área
        console.log("A área do quadrado é: " + area); // monstar o resultado
        alert("A área do quadrado é: " + area); // monstar o resultado
    </script>



