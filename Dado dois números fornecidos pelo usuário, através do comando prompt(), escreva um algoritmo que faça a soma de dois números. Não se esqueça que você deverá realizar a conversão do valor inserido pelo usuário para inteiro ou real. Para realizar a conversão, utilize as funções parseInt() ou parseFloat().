<body>
    <script>
        var n1, n2, soma;
        n1 = prompt("Informe o 1º número.");
        n1 = parseInt(n1, 10);
        n2 = prompt("Informe o 2º número.");
        n2 = parseInt(n2, 10);
        soma = n1 + n2;
        console.log("A soma é: " + soma);
        alert("A soma é: " + soma);
    </script>
